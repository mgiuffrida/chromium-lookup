{
  "manifest_version": 2,
  "name": "Chromium Lookup",
  "version": "0.3",
  "description": "Search Chromium code, bugs & commits from the context menu.",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },

  "author": "Michael Giuffrida",
  "background": {
    "scripts": ["common.js", "background.js"],
    "persistent": false
  },

  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  },

  "permissions": [
    "contextMenus",
    "storage"
  ]
}
